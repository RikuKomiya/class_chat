<div class="bg_show">

<div>
  <h1>
  <%= @course.course_name %>
  </h1>
  <h2><%= @course.professor %></h2>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 ">
    <div class="content-form-block">
      <%= form_for @micropost,url: course_microposts_url(@course),remote: true do |f | %>
        <%= f.text_area :content ,class: "content-form",size: "20x10"%>

          <%= f.submit "投稿" ,class: "btn btn-primary content-btn"%>

      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 micropost_container">

    <ol class="microposts">
      <% @feed.each do |micropost| %>
        <li class="micropost_text">
          <span class="user_name">匿名</span>
          <span class="content"><%= micropost.content %></span>
          <span class= "timestamp"><%= time_ago_in_words(micropost.created_at) %> ago</span>
        </li>
      <% end %>

    </ol>
    <%= will_paginate (@feed)%>
  </div>
</div>
</div>